<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tv_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tgl keluar/mauk"
            android:layout_marginBottom="11dp"/>

        <TextView
            android:layout_below="@+id/tv_tgl"
            android:id="@+id/tv_tipe_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Transaksi           : "/>

        <TextView
            android:layout_below="@+id/tv_tipe_transaksi"
            android:id="@+id/Jumlah_Transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Transaksi      : "/>

        <TextView
            android:id="@+id/Transaksi"
            android:layout_below="@+id/tv_tgl"
            android:layout_toRightOf="@id/tv_tipe_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Transaksi"/>

        <TextView
            android:id="@+id/Jumlah"
            android:layout_below="@+id/Transaksi"
            android:layout_toRightOf="@id/Jumlah_Transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Transaksi"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

